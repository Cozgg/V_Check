{
    "manifest_version": 3,
    "name": "Fact Checker Clone",
    "version": "1.0",
    "description": "Phân tích độ tin cậy của trang web.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon3.png",
            "48": "icons/icon1.png",
            "128": "icons/icon2.png",
            "03": "icons/icon4.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon3.png",
        "48": "icons/icon1.png",
        "128": "icons/icon2.png",
        "03": "icons/icon4.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon4.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}